<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/item_dog_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_dog_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        app:layout_constraintStart_toEndOf="@id/item_dog_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_dog_favTreat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        app:layout_constraintStart_toEndOf="@id/item_dog_image"
        app:layout_constraintTop_toBottomOf="@id/item_dog_name" />

    <TextView
        android:id="@+id/item_dog_walkDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        app:layout_constraintStart_toEndOf="@id/item_dog_image"
        app:layout_constraintTop_toBottomOf="@id/item_dog_favTreat" />

    <TextView
        android:id="@+id/item_dog_owner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        app:layout_constraintStart_toEndOf="@id/item_dog_image"
        app:layout_constraintTop_toBottomOf="@id/item_dog_walkDate" />

    <TextView
        android:id="@+id/item_dog_contact"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        app:layout_constraintStart_toEndOf="@id/item_dog_image"
        app:layout_constraintTop_toBottomOf="@id/item_dog_owner" />

</androidx.constraintlayout.widget.ConstraintLayout>